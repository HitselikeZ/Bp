package de.hitselikez.inv;

import de.hitselikez.main.Main;
import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.inventory.ItemStack;
import org.bukkit.inventory.meta.ItemMeta;

public class Inv {

    public static ItemStack weiter;
    public static ItemStack zurück;

    public static void reginvs() {

        for (int i = 0 ; i != 3; i++) {

            Main.inv[i] = Bukkit.createInventory(null , 27);

        }



    }

    public static void setinvs() {

        weiter = new ItemStack(Material.GREEN_STAINED_GLASS);
        ItemMeta weiter_meta = weiter.getItemMeta();
        weiter_meta.setDisplayName("§aNächste Seite");
        weiter.setItemMeta(weiter_meta);

        zurück = new ItemStack(Material.RED_STAINED_GLASS);
        ItemMeta zurück_meta = zurück.getItemMeta();
        zurück_meta.setDisplayName("§aNächste Seite");
        zurück.setItemMeta(zurück_meta);

        for (int i = 0; i != 3 ; i++) {

            Main.inv[i].setItem(18 , zurück);
            Main.inv[i].setItem(26 , weiter);

        }


    }

}
